[module/pianobar]
type = "custom/script"
exec = ~/.config/pianobar/info.rb
exec-if = pgrep -x pianobar

[module/mpd]
type = "custom/script"
exec = mpc current
exec-if = ruby .config/mpd/playing.rb

[module/vpn]
type = "custom/script"
exec = ~/.config/polybar/vpn.sh
exec-if = nmcli connection show --active | grep vpn

[bar/nordbar]
locale = en_US.UTF-8
font-0 = "Iosevka Nerd Font:size=10:weight=Medium"

monitor = eDP1

background = ${colors.background}
foreground = ${colors.foreground}

bottom = false
border-size = 2
border-color = ${colors.background}
line-size = 2

wm-name = bspwm
wm-restack = bspwm

separator = " | "
fixed-center = true

modules-left = bspwm backlight volume
modules-center = date pianobar mpd
modules-right = internalbattery externalbattery rootfs network vpn
tray-position = right

padding-right = 1
