#
# wm independent hotkeys
#

# Paste fix wizardry
~button2
	echo -n | xsel -n -i
~control + c
	echo -n | xsel -n -i
~control + x
	echo -n | xsel -n -i

# terminal emulator
super + Return
	alacritty

# program launcher
super + space
	zsh -ci "rofi -show run"

# program switcher
super + Tab
	rofi -show

# exit program
super + Escape
	~/.config/bin/logout-menu

# lock screen
super + l
	~/.config/bin/lock

# keyboard switching program
super + grave
	~/.config/bin/switch-keymap

# emoji selector
super + e
	~/.config/bin/emoji

# make sxhkd reload its configuration files:
super + r
	pkill -USR1 -x sxhkd

# brightness keys
XF86MonBrightnessUp
	xbacklight -inc 10

shift + XF86MonBrightnessUp
	xbacklight -inc 5

XF86MonBrightnessDown
	xbacklight -dec 10

shift + XF86MonBrightnessDown
	xbacklight -dec 5

# volume keys
XF86AudioRaiseVolume
	ponymix increase 10

shift + XF86AudioRaiseVolume
	ponymix increase 5

XF86AudioLowerVolume
	ponymix decrease 10

shift + XF86AudioLowerVolume
	ponymix decrease 5

XF86AudioMute
	ponymix toggle

shift + XF86AudioMute
	ponymix set-volume 0

super + XF86AudioMute
	mpc toggle

# print screen key
super + p
	scrot ~/documents/pictures/screenshots/%Y-%m-%d-%T-screenshot.png

shift + super + p
	scrot -u ~/documents/pictures/screenshots/%Y-%m-%d-%T-screenshot.png

# bookmarks page
super + b
	zsh -ci 'firefox "$HOMEPAGE"'

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# put the current window into the lower-left corner
super + c
	bspc node -t floating; xdo resize -w 400 -h 400; xdo move -x 10 -y $(( 1080 - 400 - 10 - 5))

# focus the node in the given direction
super + shift + {h,j,k,l}
	bspc node -f {west,south,north,east}

# swap the node in the given direction
super + shift + {y,u,i,o}
	bspc node -s {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + {Left,Right}
	bspc desktop -f {prev,next}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect location for next node to open in
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + BackSpace
	bspc node -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
